{
    "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
    "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
    "window_hiding_behaviour": "Cloak",
    "cross_monitor_move_behaviour": "Insert",
    "default_workspace_padding": 0,
    "default_container_padding": 0,
    "border": true,
    "border_width": 3,
    "border_offset": -1,
    "border_style": "System",
    "border_colours": {
        "single": "#f38ba8",
        "monocle": "#cba6f7",
        "unfocused": "#cdd6f4",
        "stack": "#74c7ec",
        "floating": "#a6e3a1"
    },
    "mouse_follows_focus": false,
    "animation": {
        "enabled": true,
        "duration": 250,
        "fps": 120,
        "style": "EaseInOutExpo"
    },
    "stackbar": {
        "mode": "Never"
    },
    "display_index_preferences": {
        "0": "PHL0942-5&28220b11&0&UID168195",
        "1": "SAM0B6B-5&28220b11&0&UID168192"
    },
    "monitors": [
        {
            "workspaces": [
                {
                    "name": "browser",
                    "layout": "VerticalStack",
                    "initial_workspace_rules": [
                        {
                            "kind": "Exe",
                            "id": "zen.exe",
                            "matching_strategy": "Equals"
                        }
                    ]
                },
                {
                    "name": "terminal",
                    "layout": "VerticalStack",
                    "initial_workspace_rules": [
                        {
                            "kind": "Exe",
                            "id": "WindowsTerminal.exe",
                            "matching_strategy": "Equals"
                        }
                    ]
                },
                {
                    "name": "placeholder",
                    "layout": "VerticalStack"
                }
            ]
        },
        {
            "workspaces": [
                {
                    "name": "browser",
                    "layout": "VerticalStack"
                },
                {
                    "name": "placeholder",
                    "layout": "VerticalStack"
                }
            ]
        }
    ],
    "ignore_rules": [
        {
            "kind": "Title",
            "id": "Settings",
            "matching_strategy": "Contains"
        },
        {
            "kind": "Title",
            "id": "settings",
            "matching_strategy": "Contains"
        },
        {
            "kind": "Exe",
            "id": "Spotify.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "Discord.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "Rterm.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "obs64.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "explorer.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "ApplicationFrameHost.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Title",
            "id": "Counter-Strike 2",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "steamwebhelper.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "PowerToys.EnvironmentVariables.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "Flow.Launcher.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "kdeconnect-app.exe",
            "matching_strategy": "Equals"
        }
    ]
}
