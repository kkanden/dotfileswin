{
    "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
    "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
    "window_hiding_behaviour": "Cloak",
    "cross_monitor_move_behaviour": "Insert",
    "default_workspace_padding": 0,
    "default_container_padding": 3,
    "border": true,
    "border_width": 3,
    "border_offset": -1,
    "border_style": "Square",
    "border_colours": {
        "single": "#e9b143",
        "monocle": "#af2528",
        "unfocused": "#e0e9d3",
        "stack": "#266b79"
    },
    "mouse_follows_focus": false,
    "animation": {
        "enabled": true,
        "duration": 250,
        "fps": 120,
        "style": "EaseInOutExpo"
    },
    "stackbar": {
        "mode": "Never"
    },
    "display_index_preferences": {
        "0": "IVO8CBE-4&2714e9ea&0&UID8388688"
    },
    "monitors": [
        {
            "workspaces": [
                {
                    "name": "browser",
                    "layout": "VerticalStack",
                    "initial_workspace_rules": [
                        {
                            "kind": "Exe",
                            "id": "zen.exe",
                            "matching_strategy": "Equals"
                        },
                        {
                            "kind": "Exe",
                            "id": "msedge.exe",
                            "matching_strategy": "Equals"
                        }
                    ]
                },
                {
                    "name": "terminal",
                    "layout": "VerticalStack",
                    "initial_workspace_rules": [
                        {
                            "kind": "Exe",
                            "id": "WindowsTerminal.exe",
                            "matching_strategy": "Equals"
                        }
                    ]
                },
                {
                    "name": "teams",
                    "layout": "VerticalStack",
                    "initial_workspace_rules": [
                        {
                            "kind": "Exe",
                            "id": "ms-teams.exe",
                            "matching_strategy": "Equals"
                        }
                    ]
                },
                {
                    "name": "outlook",
                    "layout": "VerticalStack",
                    "initial_workspace_rules": [
                        {
                            "kind": "Exe",
                            "id": "OUTLOOK.EXE",
                            "matching_strategy": "Equals"
                        }
                    ]
                }
            ]
        }
    ],
    "ignore_rules": [
        {
            "kind": "Title",
            "id": "Settings",
            "matching_strategy": "Contains"
        },
        {
            "kind": "Title",
            "id": "settings",
            "matching_strategy": "Contains"
        },
        {
            "kind": "Exe",
            "id": "Spotify.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "Discord.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "Rterm.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "obs64.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "explorer.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "ApplicationFrameHost.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Title",
            "id": "Counter-Strike 2",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "steamwebhelper.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "PowerToys.EnvironmentVariables.exe",
            "matching_strategy": "Equals"
        },
        {
            "kind": "Exe",
            "id": "Flow.Launcher.exe",
            "matching_strategy": "Equals"
        }
    ]
}
