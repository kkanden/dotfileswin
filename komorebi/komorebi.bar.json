{
    "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.31/schema.bar.json",
    "monitor": {
        "index": 0,
        "work_area_offset": {
            "left": 0,
            "top": 28,
            "right": 0,
            "bottom": 28
        }
    },
    "frame": {
        "inner_margin": {
            "x": 10,
            "y": 0
        }
    },
    "position": {
        "end": {
            "x": 1920,
            "y": 30
        }
    },
    "font_size": 12,
    "font_family": "JetBrainsMono",
    "theme": {
        "palette": "Catppuccin",
        "name": "Macchiato",
        "accent": "Pink"
    },
    "grouping": {
        "kind": "Widget",
        "rounding": 10,
        "style": "Default"
    },
    "transparency_alpha": 0,
    "left_widgets": [
        {
            "Komorebi": {
                "workspaces": {
                    "enable": false,
                    "hide_empty_workspaces": false
                },
                "layout": {
                    "enable": true
                },
                "focused_window": {
                    "enable": true,
                    "display": "IconAndTextOnSelected"
                }
            }
        }
    ],
    "center_widgets": [
        {
            "Time": {
                "enable": true,
                "format": "TwentyFourHour"
            }
        }
    ],
    "right_widgets": [
        {
            "Media": {
                "enable": true
            }
        },
        {
            "Memory": {
                "enable": true
            }
        },
        {
            "Date": {
                "enable": true,
                "format": "YearMonthDate"
            }
        }
    ]
}
